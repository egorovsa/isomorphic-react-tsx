@font-face {
	font-family: 'icomoon';
	src: url('/fonts/icomoon/icomoon.eot?pkbg50');
	src: url('/fonts/icomoon/icomoon.eot?pkbg50#iefix') format('embedded-opentype'),
			url('/fonts/icomoon/icomoon.ttf?pkbg50') format('truetype'),
			url('/fonts/icomoon/icomoon.woff?pkbg50') format('woff'),
			url('/fonts/icomoon/icomoon.svg?pkbg50#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

icon-font($content = $icon-menu-bar) {
	font-family: 'icomoon' !important;
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

	content: $content;
}

$icon-menu-bar = "\e9bd";
$angle-right = "\f105";
$angle-left = "\f104";
$circle-left = "\ea44"
$circle-right = "\ea42"
$calendar = "\f073"
$chevron-down = "\f078"
$chevron-up = "\f077"
$location = "\e947"
$phone = "\e942"
