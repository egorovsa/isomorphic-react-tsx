		border 1px solid $yellow-color
		border-radius 5px
		margin-bottom 15px
		transition background 0.2s

		.name
			color #000
			font-size 18px
			margin-bottom: 13px

		.price
			color $yellow-color
			font-size 30px
			font-weight bold

			span
				font-size 18px
				font-weight: 300

		.price-rozn
			margin-top: 5px;
